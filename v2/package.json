{
  "name": "screentrail-web-extension",
  "private": true,
  "version": "1.0.0",
  "description": "The web extension of ScreenTrail which helps to run ScreenTrail on any website out of box",
  "author": "ScreenTrail-io",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev:chrome": "cross-env TARGET_BROWSER=chrome vite dev",
    "dev:firefox": "cross-env TARGET_BROWSER=firefox vite dev",
    "build:chrome": "cross-env TARGET_BROWSER=chrome vite build",
    "build:firefox": "cross-env TARGET_BROWSER=firefox vite build",
    "pack:chrome": "cross-env TARGET_BROWSER=chrome ZIP=true vite build",
    "pack:firefox": "cross-env TARGET_BROWSER=firefox ZIP=true vite build",
    "check-types": "tsc -noEmit",
    "build": "npm run pack:chrome && npm run pack:firefox",
    "prepublish": "yarn build"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@rrweb/types": "^2.0.0-alpha.18",
    "@types/chrome": "^0.0.287",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/semver": "^7.5.8",
    "@types/webextension-polyfill": "^0.9.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.33",
    "semver": "^7.6.3",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "type-fest": "^2.19.0",
    "typescript": "^5.3.3",
    "vite": "^5.3.1",
    "vite-plugin-web-extension": "^4.4.3",
    "vite-plugin-zip-pack": "^1.2.2",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@rrweb/rrweb-plugin-console-record": "^2.0.0-alpha.18",
    "@tanstack/react-table": "^8.5.22",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "idb": "^7.1.1",
    "lucide-react": "^0.485.0",
    "mitt": "^3.0.0",
    "nanoid": "^4.0.0",
    "next-themes": "^0.4.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.4.0",
    "react-router-dom": "^6.4.1",
    "recharts": "^2.15.1",
    "rrweb": "^2.0.0-alpha.18",
    "rrweb-player": "^2.0.0-alpha.18",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.0.2"
  }
}
